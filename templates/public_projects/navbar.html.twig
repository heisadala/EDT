{% set nb_realized = nb_closed_projets + nb_unknown_projets %}
{% set realized_total = closed_projets_total + unknown_projets_total %}

<div class="container-fluid justify-content-between">
  <nav class="navbar navbar-expand-lg" >
    {% include ( "navbar_brand.html.twig" ) %}
    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle " 
          data-bs-toggle="dropdown" 
          href=''
          role="button" 
          aria-expanded="false">{{ year }}
        </a>
        <ul class="dropdown-menu edt-dropdown-menu">
          {% set other_year = '2024' %}
          {% if year == '2024' %}
          {% set other_year = year + 1 %}
          {% endif %}
          <li><a class="dropdown-item edt-dropdown-item" href='{{ path('public_projects') }}/{{ other_year }}'>{{ other_year }}</a></li>
        </ul>
      </li>
    </ul>
      <div class="container-fluid">
            <p class="text-dark edt-donateurs-titre">{{ nb_realized }} projets 
            realisés en {{ year }} pour un coût total de  
            <br><span class='edt-donateurs-titre'>{{ realized_total|round }} Euros</span>
      </div>
  </nav>
</div>
