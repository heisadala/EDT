<div class="container-fluid bg-body-secondary">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 g-4 mt-2 justify-content-center">
        {% for donateur in donateurs %}
            {% if loop.index0 > 0 %}
                    <div class="col md-1 d-flex align-items-stretch">
                        <div class="card text-center">
                            <img src="{{ server_base }}/donateurs/{{ year }}/{{ donateur.image }}" 
                                class="card-img-top" alt="{{ donateur.nom }}">
                            {% if donateur.fb != NULL %}
                                <a class='p-1' target="_blank" href={{ donateur.fb }}>
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/facebook-48.png" >
                                </a>
                            {% else %}
                                <a class='p-1' >
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/blanc-48.png" >
                                </a>
                            {% endif %}
                            <div class="card-body">
                                <table class='table table-sm'>
                                    <thead>
                                    </thead>
                                    <tbody>
                                        <tr class="table-light" ><td>Montant</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ donateur.montant }} Euros</td></tr>
                                        <tr class="table-light" ><td>Date</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ donateur.date }}</td></tr>

                                        {% for donproj in donprojs %}
                                           {% if donateur.donateur_id == donproj.donateur_id %}
                                                {% if donproj.p1_project != NULL %}
                                                    <tr class="table-success" ><td>Projet financé 2025</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ donproj.p1_project }}</td></tr>
                                                    <tr class="table-warning" ><td>Structure</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ donproj.p1_affectation }}</td></tr>
                                                {% elseif donproj.p2_project != NULL %}
                                                    <tr class="table-success" ><td>Projet financé 2026</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ donproj.p2_project }}</td></tr>
                                                    <tr class="table-warning" ><td>Structure</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ donproj.p2_affectation }}</td></tr>
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    </tbody>
                                </table>
                                {% if donateur.url != NULL %}
                                    <a class="btn btn-info btn-sm" href="{{ donateur.url }}" 
                                        target='_blank'>{{ donateur.nom }}</a>       
                                {% else %}         
                                <a class="btn btn-info btn-sm disabled" >{{ donateur.nom }}</a>                
                                {% endif %}
                            </div>
                        </div>
                    </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class='row justify-content-between m-0' 
        style='height: 1rem;'>
    </div>        
</div>