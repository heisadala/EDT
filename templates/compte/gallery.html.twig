<div class='container-fluid px-4'>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-6 g-4 mt-2">
        {% for database in databases %}
            {% if loop.index0 > 0 %}
                {% if database.name |upper != 'CAISSES' and database.name |upper != 'LIVRET' and database.name |upper != 'PROJECT' %} 
                    <div class="col md-1">
                        <div class="card text-center" style="max-width: 18rem;">
                            <img src="{{ server_base }}/images/background/{{ database.background }}" 
                                class="card-img mx-auto" style="width:100px;" alt="{{ database.name }}">
                            <div class="card-body"><br>
                                <a class="btn btn-info" href="{{ server_base }}{{ database.url }}" 
                                    target='_blank'>{{ database.name }}</a>                
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
</div>