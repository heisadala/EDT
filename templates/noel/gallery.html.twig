<div class="container-fluid bg-body-secondary">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 g-4 mt-2 justify-content-center">
        {% for exposant in exposants %}
                    <div class="col md-1">
                        <div class="card text-center ">
                            {# <img src="{{ server_base }}/marche_de_noel/{{ exposant.img }}"  #}
                            <img src="{{ server_base }}/marche_de_noel/{{ exposant.img }}" 
                                class="card-img-top" alt="{{ exposant.img }}">
                                <table class='table table-sm'>
                                <thead>
                                </thead>
                                <tbody>
                                <tr><td>
                            {% if exposant.url != NULL %}
                                <a target="_blank" href={{ exposant.url }}>
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/url-48.png" >
                                </a>
                            {% else %}
                                <a >
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/blanc-48.png" >
                                </a>
                            {% endif %}
                            </td><td>                            
                            {% if exposant.fb != NULL %}
                                <a target="_blank" href={{ exposant.fb }}>
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/facebook-48.png" >
                                </a>
                            {% else %}
                                <a >
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/blanc-48.png" >
                                </a>
                            {% endif %}
                            </td><td>                            
                            {% if exposant.insta != NULL %}
                                <a target="_blank" href={{ exposant.insta }}>
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/instagram-48.png" >
                                </a>
                            {% else %}
                                <a>
                                    <img class='img-fluid rounded' style="width:40px;height:40px"
                                    src="{{ server_base }}/images/icon/blanc-48.png" >
                                </a>
                            {% endif %}
                                </td></tr>
                                </tbody>
                                </table>
                            {% if exposant.nouveau == year %}
                                <div class="card-body text-white edt-bg-green">
                            {% else %}
                                <div class="card-body">
                            {% endif %}
                                <table class='table table-sm'>
                                    <thead>
                                    </thead>
                                    <tbody>
                                        <tr class="table-light" ><td>Exposant</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ exposant.nom }}</td></tr>
                                        <tr class="table-light" ><td>Artisanat</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ exposant.artisanat }}</td></tr>
                                    </tbody>
                                </table>
{#                                 {% if donateur.url != NULL %}
                                    <a class="btn btn-info btn-sm" href="{{ donateur.url }}" 
                                        target='_blank'>{{ donateur.nom }}</a>       
                                {% else %}         
                                <a class="btn btn-info btn-sm disabled" >{{ donateur.nom }}</a>                
                                {% endif %} #}
                            </div>
                        </div>
                    </div>
        {% endfor %}
    </div>
    <div class='row justify-content-between m-0' 
        style='height: 1rem;'>
    </div>        
</div>