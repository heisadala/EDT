{% block navbar %}
    {% if show_navbar is defined and show_navbar == true %}
        {% include ( "#{db|lower}/navbar.html.twig" ) %}
    {% endif %}
{% endblock %}

{% block content %}
    {% if show_carousel_ag is defined and show_carousel_ag == true %}
        {% include ( "#{db|lower}/carousel_ag.html.twig" ) %}
    {% endif %}
    {% if show_carousel_photo is defined and show_carousel_photo == true %}
        {% include ( "#{db|lower}/carousel_photo.html.twig" ) %}
    {% endif %}
    {% if show_flyer is defined and show_flyer == true %}
        {% include ( "#{db|lower}/flyer.html.twig" ) %}
    {% endif %}
    {% if show_cards is defined and show_cards == true %}
        {% include ( "#{db|lower}/cards.html.twig" ) %}
    {% endif %}
    {% if show_login is defined and show_login == true %}
        {% include ( "security/login.html.twig" ) %}
    {% endif %}
